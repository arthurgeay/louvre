{% extends "AStudioCoreBundle::layout.html.twig" %}

{% block title %} Contact - {{parent()}} {% endblock %}

{% block body %}
    
<div class="container-fluid">
	<h1>Contact</h1>
	
	 {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="alert alert-success">
            {{ flashMessage }}
        </div>
    {% endfor %}

    	<div class="well">
	    	{{ form_start(form) }}
	    		{{ form_errors(form) }}

				<div class="form-group">
					{{ form_label(form.lastname, "Nom", {'label_attr': {'class': 'col-sm-2'}})}}

				{% if form.lastname.vars.errors|length > 0 %}
        			<div class="alert alert-danger">
        				{{ form_errors(form.lastname) }}
        			</div>
        		{% endif %}

				<div class="col-sm-10">
					{{ form_widget(form.lastname, {'attr': {'class': 'form-control'}})}}
				</div>
				</div>

				<div class="form-group">
					{{ form_label(form.firstname, "PrÃ©nom", {'label_attr': {'class': 'col-sm-2'}})}}

				{% if form.firstname.vars.errors|length > 0 %}
        			<div class="alert alert-danger">
        				{{ form_errors(form.firstname) }}
        			</div>
        		{% endif %}

				<div class="col-sm-10">
					{{ form_widget(form.firstname, {'attr': {'class': 'form-control'}})}}
				</div>
				</div>

				<div class="form-group">
					{{ form_label(form.email, "Adresse mail", {'label_attr': {'class': 'col-sm-2'}})}}

				{% if form.email.vars.errors|length > 0 %}
        			<div class="alert alert-danger">
        				{{ form_errors(form.email) }}
        			</div>
        		{% endif %}

				<div class="col-sm-10">
					{{ form_widget(form.email, {'attr': {'class': 'form-control'}})}}
				</div>
				</div>

				<div class="form-group">
					{{ form_label(form.message, "Message", {'label_attr': {'class': 'col-sm-2'}})}}

				{% if form.message.vars.errors|length > 0 %}
        			<div class="alert alert-danger">
        				{{ form_errors(form.message) }}
        			</div>
        		{% endif %}

				<div class="col-sm-10">
					{{ form_widget(form.message, {'attr': {'class': 'form-control'}})}}
				</div>
				</div>

				<div class="form-group">
          			<div class="col-sm-10">
            		<button type="submit" class="btn btn-primary"><i class="fa fa-paper-plane" aria-hidden="true"></i> Continuer</button>
          			</div>
          
      			</div>

				{{ form_rest(form) }}
	    	{{ form_end(form) }}
    	</div>
 </div> 

{% endblock %}