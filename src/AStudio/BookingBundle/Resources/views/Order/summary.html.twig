{% extends "AStudioBookingBundle::layout.html.twig" %}

{% block order_body %}
  
    <h2>Récapitulatif de la commande</h2>

    <table class="table table-hover table-responsive table-bordered">
      <thead>
        <tr>
          <th class="text-center">Nom</th>
          <th class="text-center">Prénom</th>
          <th class="text-center">Date de naissance</th>
          <th class="text-center">Tarif réduit</th>
          <th class="text-center">Prix</th>
        </tr>
      </thead>
      <tbody>
        {% for ticket in tickets %}
        <tr>
          <th scope="row" class="text-center">{{ ticket.lastname }}</th>
          <th class="text-center">{{ ticket.firstname }}</th>
          <th class="date text-center">{{ ticket.birthdate| date('d/m/Y') }}</th>
          <th class="reduced text-center">
            {% if ticket.reducedprice == 1 %}
            <span class="reduced">{{ ticket.reducedprice }}</span>
            
            {% endif %}
          </th>
          <th class="price text-center"></th>
        </tr>
        {% endfor %}
        <tr>
          <th>&nbsp;</th>
          <th>&nbsp;</th>
          <th>&nbsp;</th>
          <td class="text-center"><h4>Total</h4></td>
          <td class="total text-center"></td>
        </tr>
      </tbody>
    </table>

    <button class="btn btn-primary">Commander</button>
    
{% endblock %}

{% block javascripts%}
{{ parent() }}
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.min.js"></script>

<script>
  $(function() {
    var yearAct = new Date().getFullYear(); // Année actuelle

    for(var i = 0; i < $('.date').length; i++)
    {
      var date = $('.date')[i].innerText;
      var dateObj = moment(date, 'DD-MM-YYYY'); // Date formatée
      var datestring = dateObj.toString(); // Date en string
      var year = new Date(datestring).getFullYear(); // On récupère l'année de la date
      var reduced = $('.reduced')[i].innerText;
      
      
      if((yearAct - year) < 4)
      {
        $('.price')[i].append('0');
      }
      else if (reduced == 1)
      {
        $('.price')[i].append('10')
      }
      else if ((yearAct - year) >= 60)
      {
        $('.price')[i].append('12');
      }
      else if((yearAct - year) > 12)
      {
        $('.price')[i].append('16');
      }
      else if((yearAct - year) >= 4 && (yearAct - year) <= 12)
      {
        $('.price')[i].append('8');
      }
      
    }

    // Calcul du prix total de la réservation
    var total = 0;
    for(var i = 0; i < $('.price').length; i++)
    {
      total = parseInt(total) + parseInt($('.price')[i].innerText);
    }

    $('.total').append(total + ' €');
    
  });
</script>
{% endblock %}

    